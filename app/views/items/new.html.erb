
<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('753737.png' , size: '185x50'), "/" %>

  </header>

  <div class="items-sell-main">
    <h2 class="items-sell-title">レビューの情報を入力</h2>
    
    <%= form_with model:@item, local: true do |f| %>
    <div class="items-detail">
      <div class="weight-bold-text">
      販売別
      
      </div>
      <div class="form">
        
        <%= f.collection_select(:online_id, Online.all, :id, :name, {}, {class:"select-box", id:"item-online"}) %>
      </div>
    </div> 

    <div class="items-detail">
      <div class="weight-bold-text">
      月設定
      
      </div>
      <div class="form">
        
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div> 
    <div class="items-detail">
      <div class="weight-bold-text">
      or<br/>
      いつものメニュー
      
      </div>
      <div class="form">
        
        <%= f.collection_select(:alway_id, Alway.all, :id, :name, {}, {class:"select-box", id:"item-alway"}) %>
      </div>
    </div>   
    <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <div class="new-items">
      <div class="weight-bold-text">
        商品名<span class="counter">(40文字まで)</span>   
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name" %>
    </div> 
    <div class="new-items">
      <div class="weight-bold-text">
        値段
      </div>
      <span class="sell-yen">¥</span>
      <%= f.text_area :price, class:"items-text", id:"item-name" %>
    </div> 
    <div class="new-items">
      <div class="items-explain">
        <div class="weight-bold-text">
          商品説明
        </div>
        <%= f.text_area :text, class:"items-text", id:"item-info"%>
      </div>
    </div> 
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <%= link_to image_tag('753737.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎pikuonea,Inc.
    </p>
  </footer>
</div>