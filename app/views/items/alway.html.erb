<% if @alway=="5" %>
<div class="favorite">
  <h1>FOODS</h1>
</div> 
<div class="moth"> 
  <div class="month-menu">
    <% @food.each do |food|%>
      <div class="mep">
        <div class="month-food">
          <%=link_to item_path(food.id),class:"online-food" do %>
          <%= image_tag food.image, class: "month-img"  %> 
          <div class="food-name"><%= food.name%></div>
          <div class="month-price"><span class="pr">¥<%=food.price%></span></div>
          <div class="food-text"><%=food.text%></div>
